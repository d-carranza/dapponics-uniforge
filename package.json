    "license": "MIT",
    "devDependencies": {
        "@chainlink/contracts": "0.4.1",
        "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
        "@nomiclabs/hardhat-etherscan": "^3.1.5",
        "@nomiclabs/hardhat-waffle": "^2.0.3",
        "@openzeppelin/contracts": "^4.8.1",
        "@typechain/ethers-v5": "^10.2.0",
        "@typechain/hardhat": "^6.1.5",
        "@types/chai": "^4.3.4",
        "@types/mocha": "^9.1.0",
        "@types/node": "^18.11.18",
        "babel-eslint": "^10.1.0",
        "chai": "^4.3.7",
        "dotenv": "^16.0.3",
        "ethereum-waffle": "^3.4.4",
        "ethers": "^5.7.2",
        "hardhat": "^2.12.6",
        "hardhat-contract-sizer": "^2.7.0",
        "hardhat-deploy": "^0.11.22",
        "hardhat-deploy-ethers": "^0.3.0-beta.13",
        "hardhat-gas-reporter": "^1.0.9",
        "prettier": "^2.8.3",
        "prettier-plugin-solidity": "^1.1.1",
        "solhint": "^3.3.8",
        "solidity-coverage": "^0.8.2",
        "ts-node": "^10.9.1",
        "typechain": "^8.1.1",
        "typescript": "^4.9.4"
    },
    "scripts": {
        "slither": "slither . --solc-remaps '@openzeppelin=node_modules/@openzeppelin @chainlink=node_modules/@chainlink' --exclude naming-convention,external-function,low-level-calls",
        "test": "yarn hardhat test",
        "test:staging": "yarn hardhat test --network goerli",
        "lint": "yarn solhint 'contracts/*.sol'",
        "lint:fix": "yarn solhint 'contracts/*.sol' --fix",
        "coverage": "yarn hardhat coverage",
        "compile": "yarn hardhat compile",
        "deploy:goerli": "yarn hardhat deploy --network goerli --tags deployer-collection",
        "deploy:base": "yarn hardhat deploy --network basegoerli --tags deployer-collection",
        "deploy:mumbai": "yarn hardhat deploy --network mumbai --tags deployer-collection",
        "deploy:arbitrum": "yarn hardhat deploy --network arbitrumgoerli --tags deployer-collection",
        "deploy:optimism": "yarn hardhat deploy --network optimismgoerli --tags deployer-collection"
    }
}